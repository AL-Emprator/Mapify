<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:padding="16dp">

    <!-- Titel -->
    <TextView
        android:id="@+id/text_sensor_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyroskop"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textColor="?android:textColorPrimary"
        android:paddingBottom="16dp"/>

    <!-- Card: Live Werte -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_list"
            android:showDividers="middle">

            <LinearLayout style="@style/DashboardRowStyle">
                <TextView
                    android:id="@+id/text_x_value"
                    style="@style/DashboardRowTextStyle"
                    android:text="X-Achse: 0.000 °/s"/>
                <ImageView
                    style="@style/DashboardRowChevronStyle"
                    android:src="@drawable/ic_chevron_right"/>

                <TextView
                    android:id="@+id/textViewx"
                    style="@style/DashboardRowTextStyle"
                    android:text="TextView" />


            </LinearLayout>

            <LinearLayout style="@style/DashboardRowStyle">
                <TextView
                    android:id="@+id/text_y_value"
                    style="@style/DashboardRowTextStyle"
                    android:text="Y-Achse: 0.000 °/s"/>
                <ImageView
                    style="@style/DashboardRowChevronStyle"
                    android:src="@drawable/ic_chevron_right"/>

                <TextView
                    android:id="@+id/textViewy"
                    style="@style/DashboardRowTextStyle"
                    android:text="TextView" />

            </LinearLayout>

            <LinearLayout style="@style/DashboardRowStyle">
                <TextView
                    android:id="@+id/text_z_value"
                    style="@style/DashboardRowTextStyle"
                    android:text="Z-Achse: 0.000 °/s"/>
                <ImageView
                    style="@style/DashboardRowChevronStyle"
                    android:src="@drawable/ic_chevron_right"/>

                <TextView
                    android:id="@+id/textViewz"
                    style="@style/DashboardRowTextStyle"
                    android:text="TextView" />


            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Sektion: Aktualisierungsrate -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AKTUALISIERUNGSRATE"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="?android:textColorSecondary"
        android:paddingBottom="8dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Frequenz + Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/text_frequency_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Frequenz: 1,0 Hz"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btn_freq_minus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_round_button"
                    android:src="@drawable/ic_minus"
                    app:tint="?attr/colorOnSurface"/>

                <Space android:layout_width="8dp" android:layout_height="0dp"/>

                <ImageButton
                    android:id="@+id/btn_freq_plus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_round_button"
                    android:src="@drawable/ic_plus"
                    app:tint="?attr/colorOnSurface"/>
            </LinearLayout>

            <!-- Slider -->
            <com.google.android.material.slider.Slider
                android:id="@+id/slider_freq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:value="1"
                android:valueFrom="0.1"
                android:valueTo="5"
                android:stepSize="0.1"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageButton
                android:id="@+id/btn_record"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_record"
                app:tint="?attr/colorPrimary" />

            <ImageButton
                android:id="@+id/btn_pause"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_pause"
                app:tint="?attr/colorPrimary" />

            <ImageButton
                android:id="@+id/btn_export"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_export"
                app:tint="?attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Buttons -->
</LinearLayout>
